<%- include ('../_layouts/adminheader') %>

<h2 class="page-title">Pages</h2>
<a href="/admin/pages/add-pages" class="btn btn-primary">Add a new Page</a>
<br />
<br />

<table class="table table-stripped">
  <tr class="home">
    <th>Title</th>
    <th>Edit</th>
    <th>Delete</th>
  </tr>
  <tbody>
    <% pages.forEach((page) => { %>
    <tr id="id_<%= page._id %>" class="<%= page.slug %>">
      <td><%= page.title %></td>

      <td> <a href="/admin/pages/edit-page/<%= page.slug %>"> Edit</a></td>
      <% if (page.slug === "home") { %>
      <td></td>
      <% } else {%>
      <td><a href="/admin/pages/delete-page/<%= page._id %>"> Delete </a></td>
      <% } %>
    </tr>

    <% }) %>
  </tbody>
</table>

<script src="https://code.jquery.com/ui/1.12.0/jquery-ui.min.js"></script>
<script>
    $('tbody').sortable({

        items: "tr:not('.home')",
        placeholder: "ui-state-hightlight",
        update: function(){
            let ids = $('tbody').sortable("serialize");
            let url = "/admin/pages/reorder-page";

            $.post(url, ids)
        }
    })
</script>

<%- include ('../_layouts/adminfooter') %>
